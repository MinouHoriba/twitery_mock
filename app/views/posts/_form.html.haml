= form_with(model: post) do |form|
  - if post.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(post.errors.count, "エラー")
        セーブできませんでした
      %ul
        - post.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :content, style: "display: block"
    = form.text_field :content
  %div
    = form.submit
